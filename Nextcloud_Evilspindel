version: "3"

services:
  nextcloud:
    image: nextcloud:latest
    container_name: nextcloud-23
    environment:
       - PUID=1000
       - PGID=100
       - TZ=Europe/Netherlands
       - REDIS_HOST=redis-nextcloud
       - REDIS_HOST_PASSWORD=pass
       - NEXTCLOUD_TRUSTED_DOMAINS=
       - PHP_MEMORY_LIMIT=1024M
       - PHP_UPLOAD_LIMIT=1024M
    volumes:
      - /srv/dev-disk-by-uuid-d9f467d8-943b-4693-8d91-74b932f14d3f/RAID/nextcloud/nextcloud/html:/var/www/html
      - /srv/dev-disk-by-uuid-d9f467d8-943b-4693-8d91-74b932f14d3f/RAID/nextcloud/nextcloud/html/custom_apps:/var/www/html/custom_apps
      - /srv/dev-disk-by-uuid-d9f467d8-943b-4693-8d91-74b932f14d3f/RAID/nextcloud/nextcloud/config:/var/www/html/config
      - /srv/dev-disk-by-uuid-d9f467d8-943b-4693-8d91-74b932f14d3f/RAID/nextcloud/nextcloud/data:/var/www/html/data
      - /srv/dev-disk-by-uuid-d9f467d8-943b-4693-8d91-74b932f14d3f/RAID/nextcloud/nexcloud_ssl:/ssl
    ports:
      - 8484:80
      - 4334:443
    restart: unless-stopped
    depends_on:
      - redis-nextcloud
  redis-nextcloud:
     image: redis:alpine
     container_name: redis-nextcloud
     command: redis-server --requirepass pass
     restart: unless-stopped
